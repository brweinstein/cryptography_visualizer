{
  "name": "rsa-visualizer-web",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "npm run wasm:build && next dev",
    "build": "npm run wasm:build && next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "wasm:build": "cd ../rust && wasm-pack build --target web --out-dir ../web/public/pkg --out-name crypto_wasm"
  },
  "dependencies": {
    "d3": "7.9.0",
    "next": "14.2.32",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "14.3.1",
    "@types/d3": "7.4.3",
    "@types/d3-array": "^3.2.2",
    "@types/d3-scale": "^4.0.9",
    "@types/jsdom": "21.1.7",
    "@types/node": "20.11.30",
    "@types/react": "18.2.64",
    "@types/react-dom": "18.2.21",
    "@vitest/ui": "1.6.1",
    "autoprefixer": "10.4.20",
    "jsdom": "24.1.0",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.10",
    "typescript": "5.6.2",
    "vitest": "1.6.1",
    "wasm-pack": "0.12.1"
  },
  "overrides": {
    "esbuild": ">=0.24.3"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": [
      "./src/test/vitest.setup.ts"
    ]
  }
}
